      "module": "ES2020",
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./src",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*", "src/Server.ts"],
    "exclude": ["node_modules"]
  }
  